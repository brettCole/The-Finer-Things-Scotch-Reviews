<h1>Edit Review</h1>
<% if flash.has?(:error) %>
	<h3 style="color: red;"><%= flash[:error] %></h3>
<% end %><br>
<form method="POST" action="/review/<%=@reviewer.scotch.slug%>?reviews_id=<%=@reviews%>">
	<input id="hidden" type="hidden" name="_method" value="PATCH">
	<label>Rating: </label>
	<input type="text" name="rating" required><br /><br />
	<label>Description: </label><br />
	<textarea rows="15" cols="50" name="description" required></textarea><br><br>
	<input type="hidden" name="scotch_id" value="<%= @reviewer.scotch.id %>">
	<input type="hidden" name="review_id" value="<%= @reviewer.id %>">
	<input type="submit" value="Edit Review">
</form>
<h4><a href="/reviews">Go Back To Reviews</a></h4>
